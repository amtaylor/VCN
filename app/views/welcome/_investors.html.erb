<div class="investors" id="investors">

	<div class="second">
		<h3>Know your VC nemeses:</h3>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>VC Nemeses</th>
					<th>Competitors theyâ€™ve invested in</th>
				</tr>
			</thead>
			<tbody>

				<% if @investors.size > 0 %>
					<% @investors.each do |investor| %>
						<tr>
							<td> <%= investor.name %> </td>
							<td>
								<% Investor.company_for_investor(investor).each do |vc_company| %>

									<% if vc_company.exited? %>
										<span class="text-muted">
											<%=  vc_company.name %>
											(exited)
											<%= "," unless vc_company == Investor.company_for_investor(investor).last %>
											
										</span>
									<% else %>
										<%=  vc_company.name %><%= "," unless vc_company == Investor.company_for_investor(investor).last %>
									<% end %>
								<% end %>
								
							</td>
						</tr>
					<% end %>
				<% else %>
					
						<tr>
							<td><span class="text-muted">None</span></td>
							<td><span class="text-muted">None</span></td>
						</tr>
					
				<% end %>

